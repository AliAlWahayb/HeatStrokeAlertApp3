<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/NotificationsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="#00FFFFFF"
        android:shadowColor="#00FFFFFF"
        android:text="Notifications"
        android:textColor="#003365"
        android:textColorHighlight="#00FFFFFF"
        android:textColorHint="#00FFFFFF"
        android:textColorLink="#00FFFFFF"
        android:textSize="30sp"
        app:icon="@drawable/baseline_notifications_none_24"
        app:iconSize="50dp"
        app:iconTint="#003365"
        app:rippleColor="#00FFFFFF"
        app:strokeColor="#00FFFFFF" />

    <Button
        android:id="@+id/SearchBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="#00FFFFFF"
        android:shadowColor="#00FFFFFF"
        android:text="Search"
        android:textColor="#003365"
        android:textColorHighlight="#00FFFFFF"
        android:textColorHint="#00FFFFFF"
        android:textColorLink="#00FFFFFF"
        android:textSize="32dp"
        app:icon="@drawable/search_icon"
        app:iconSize="48dp"
        app:iconTint="#003365"
        app:rippleColor="#00FFFFFF"
        app:strokeColor="#00FFFFFF" />

    <Button
        android:id="@+id/PrecautionBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="#00FFFFFF"
        android:shadowColor="#00FFFFFF"
        android:text="Precaution"
        android:textColor="#003365"
        android:textColorHighlight="#00FFFFFF"
        android:textColorHint="#00FFFFFF"
        android:textColorLink="#00FFFFFF"
        android:textSize="32dp"
        app:icon="@drawable/help_icon"
        app:iconSize="48dp"
        app:iconTint="#003365"
        app:rippleColor="#00FFFFFF"
        app:strokeColor="#00FFFFFF" />

    <Button
        android:id="@+id/ExplanationBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="#00FFFFFF"
        android:shadowColor="#00FFFFFF"
        android:text="Explanation"
        android:textColor="#003365"
        android:textColorHighlight="#00FFFFFF"
        android:textColorHint="#00FFFFFF"
        android:textColorLink="#00FFFFFF"
        android:textSize="32dp"
        app:icon="@drawable/baseline_sunny_24"
        app:iconSize="48dp"
        app:iconTint="#003365"
        app:rippleColor="#00FFFFFF"
        app:strokeColor="#00FFFFFF" />

</LinearLayout>